@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.ActionLink("Add new customer", "CustomerForm", new
{
    controller = "Customers",
}, new { @class = "btn btn-success" })


@if (!Model.Any())
{
    <p> No customers yet</p>
}
else
{
    <table class="table table-hover table-bordered" id="customers">
        <thead>
            <tr>
                <th>Name</th>
                <th>Membership Type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
}



@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers").DataTable({
                ajax: {
                    url: "/api/customer",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return `<a href="/customer/edit/${customer.id}">${customer.name}<a/>`;
                        }
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return `<button class="js-delete btn-link" data-customer-id="${data}">Delete</button>`;
                        }

                    }
                ]
            });

            $("#customers").on("click",
                ".js-delete",
                function () {
                    const button = $(this);

                    bootbox.confirm("Are you sure you want to delete this customer?",
                        function (result) {
                            if (result) {
                                $.ajax({
                                    url: `/api/customer/${button.attr("data-customer-id")}`,
                                    method: "DELETE",
                                    success: function () {
                                        console.log("success");
                                        button.parents("tr").remove();
                                    },
                                    error: function () {
                                        console.log('An error occurred');
                                    }
                                });
                            }
                        });
                });
        });
    </script>

}
