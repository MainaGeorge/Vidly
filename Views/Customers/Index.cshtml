@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (!Model.Any())
{
    <p> No customers yet</p>
}
else
{
    <table class="table table-hover table-striped">
        <tr>
            <th>@Html.DisplayNameFor(c => c[0].Name)</th>
            <th>@Html.DisplayNameFor(c => c[0].MembershipType.Name)</th>
        </tr>

        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.DisplayFor(c => customer.Name)</td>
                <td>@Html.DisplayFor(c => customer.MembershipType.Name)</td>
                <td>@Html.ActionLink("Detail", "Detail", new { id = @customer.Id })</td>
            </tr>
        }
    </table>
}


@Html.ActionLink("Add new customer", "CustomerForm", new
{
    controller = "Customers",
    @class = "btn btn-primary"
})
