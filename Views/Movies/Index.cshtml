@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("Add new Movie", "ModifyMovie", new { Controller = "Movies" }, new { @class = "btn btn-success" })

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Genre.Name)</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.Name, "ModifyMovie", new { id = item.Id })</td>
            <td>@Html.DisplayFor(c => item.Genre.Name)</td>
        </tr>
    }

</table>
